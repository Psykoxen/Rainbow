<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="1dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/date_label"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-03-11"
        android:textSize="15sp"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/weather_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"

        />
    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/rain_probability"
        android:background="@color/transparent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:arc_stroke_width="8dp"
        app:arc_progress="0"
        app:arc_angle="250"
        app:arc_unfinished_color="@color/grey"
        app:arc_text_color="@color/white"
        app:arc_text_size="18dp"
        app:arc_bottom_text_size="10dp"
        app:arc_bottom_text="Rain"
        app:arc_suffix_text_size="0sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingClass" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="1dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginEnd="3dp">
            <TextView
                android:id="@+id/tmp_min_value"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tmp_min_unit"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="1dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="3dp"
            >
            <TextView
                android:id="@+id/tmp_max_value"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tmp_max_unit"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>